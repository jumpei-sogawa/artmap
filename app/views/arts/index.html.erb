<script type="text/javascript">
  var contentString;
  var infoWindow;
  var position;
  var marker;
  function initMap() {

      var center = {lat: <%= @arts.average(:latitude) %>, lng: <%= @arts.average(:longitude) %>};
      var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 5,
          center: center
      });
      var transitLayer = new google.maps.TransitLayer();
      transitLayer.setMap(map);

      <% @arts.each do |art| %>
        <% unless art.address == '' %>
        <% unless art.latitude == 'nil' %>
        <% unless art.longitude == 'nil' %>
          contentString = '<%= art.title %>, <%= art.artist.name %>';
          infoWindow = new google.maps.InfoWindow({
              content: contentString
          });

          position = {
            lat: <%= art.latitude %>,
            lng: <%= art.longitude %>
          }
          marker = new google.maps.Marker({
              position:position,
              map: map,
              title: contentString
          });

          //ON
          marker.addListener('mouseover', () => {
            infoWindow.open(map, marker);
          }, false);

          // marker.addListener('click', () => { // マーカーをクリックしたとき

          // }, false);

          //OUT
          marker.addListener('mouseout', () => {
            infoWindow.close();
          }, false);
        <% end %>
        <% end %>
        <% end %>
      <% end %>
  }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&callback=initMap">
</script>



