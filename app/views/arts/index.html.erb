<script type="text/javascript">
  var contentString = [];
  var infoWindow = [];
  var position = [];
  var marker = [];
  function initMap() {

      var center = {lat: <%= @arts.average(:latitude) %>, lng: <%= @arts.average(:longitude) %>};
      var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 5,
          center: center
      });
      var transitLayer = new google.maps.TransitLayer();
      transitLayer.setMap(map);

      <% for i in 1..@arts.maximum(:id) do %>
        var i = <%= i %>;
        <% if @arts.exists?(id: i) %>
          <% art = @arts.find(i) %>
          <% if art.latitude.present? %>
          <% if art.longitude.present? %>
            contentString[i] = '<%= art.title %>, <%= art.artist.name %>';
            infoWindow[i] = new google.maps.InfoWindow({
                content: contentString[i]
            });

            position[i] = {
              lat: <%= art.latitude %>,
              lng: <%= art.longitude %>
            }
            marker[i] = new google.maps.Marker({
                position: position[i],
                map: map,
                title: contentString[i]
            });

            //ON
            // marker[i].addListener('mouseover', () => {
            //   infoWindow[i].open(map, marker[i]);
            // }, false);

            //OUT
            // marker[i].addListener('mouseout', () => {
            //   infoWindow[i].close();
            // }, false);

            // marker[i].addListener('click', () => {
            //     infoWindow[i].open(map, marker[i]);
            // });
          <% end %>
          <% end %>
        <% end %>
      <% end %>
  }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&callback=initMap">
</script>



