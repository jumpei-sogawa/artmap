    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 mt-2 text-lg-right">
        Link to Street View
      </div>
      <div class="col-lg-6">
        <%= form.text_field :view_link, class: "form-control", placeholder: "Link to Street View" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-6 offset-lg-3">
        <%= form.submit "Post", class: "col-lg-2 btn btn-outline-primary" %>
