<div class="container-fluid">
  <%= form_with(model: art, local: true, class: "needs-validation") do |form| %>
    <% if art.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(art.errors.count, "error") %> prohibited this art from being saved:</h2>

        <ul>
        <% art.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 mt-2 text-lg-right">
        <%= form.label :title %>
      </div>
      <div class="col-lg-3">
        <%= form.text_field :title, class: "form-control", placeholder: "Title (e.g. The Saint-Lazare Station)" %>
      </div>
      <div class="col-lg-1 mt-2 text-lg-right">
        <%= form.label :year %>
      </div>
      <div class="col-lg-2">
        <%= form.number_field :year, class: "form-control", placeholder: 1877 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 text-lg-right">
        <%= form.label :artist_id %>
      </div>
      <div class="col-lg-2">
        <%= form.select :artist_id, @artists.map{|artist| [artist.name, artist.id]}, class: "form-control" %>
      </div>
      <%= link_to 'Add Artist', new_artist_path, class: "col-lg-2", style: "text-decoration:none;" %>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 text-lg-right">
        <%= form.label :image %>
      </div>
      <div class="col-lg-6">
        <%= form.file_field :image %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 mt-2 text-lg-right">
        Link to Image Site
      </div>
      <div class="col-lg-6">
        <%= form.text_field :image_link, class: "form-control", placeholder: "Link to Image Site" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-2 offset-lg-1 mt-2 text-lg-right">
        Link to Google Maps
      </div>
      <div class="col-lg-6">
        <%= form.text_field :location_link, class: "form-control", placeholder: "Link to Google Maps" %>
      </div>
    </div>

